          <option>STEM</option>
          <option>Social Studies</option>
          <option>Classroom Management</option>
          <option>Electives</option>
          <option>Free Resources</option>
          <option>Parent Communication</option>
        </select>
      </div>
      <div class="form-group">
        <label for="project-desc">Description:</label>
        <textarea class="form-input" id="postDesc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
      
      </div>
    </form>
      <button class="btn btn-primary" id="createPost">Create</button>
  </div>

</div>
